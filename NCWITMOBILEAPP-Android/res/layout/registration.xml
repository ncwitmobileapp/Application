<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluegradient"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:maxHeight="60dp"
        android:src="@drawable/banner1trans" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:text="@string/Registration"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF8F00"
        android:textSize="35dp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/FirstName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="0.97"
                android:background="@drawable/greengradient"
                android:ems="10"
                android:hint="@string/FirstName"
                android:inputType="textPersonName"
                android:textColorHint="#565051" />

            <EditText
                android:id="@+id/LastName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="0.97"
                android:background="@drawable/greengradient"
                android:ems="10"
                android:hint="@string/LastName"
                android:inputType="textPersonName"
                android:textColorHint="#565051" />

            <EditText
                android:id="@+id/emailAddress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="0.97"
                android:background="@drawable/greengradient"
                android:hint="@string/EmailAddress"
                android:inputType="textEmailAddress"
                android:textColorHint="#565051" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="0.97"
                android:background="@drawable/greengradient"
                android:hint="@string/Password"
                android:inputType="textPassword"
                android:textColorHint="#565051" />

            <EditText
                android:id="@+id/PasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="0.97"
                android:background="@drawable/greengradient"
                android:hint="@string/PasswordConfirm"
                android:inputType="textPassword"
                android:textColorHint="#565051" />

            <TextView
                android:id="@+id/Winner"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="4.84"
                android:gravity="center"
                android:text="@string/NCWITWinner"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/ReferralLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.97" >

                <RadioButton
                    android:id="@+id/HaveCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/ReferralCode"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/ReferralCode"
                    android:layout_width="0dip"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/greengradient"
                    android:gravity="center"
                    android:hint="@string/ReferralCode"
                    android:textColorHint="#565051" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/BirthdayLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.97" >

                <TextView
                    android:id="@+id/Birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:text="@string/Birthday"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/SelectBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/greengradient"
                    android:hint="@string/SelectBDay"
                    android:textColorHint="#565051"
                    android:textSize="18dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/SecurityQuestion"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="0.97"
                android:background="@drawable/greengradient"
                android:ems="10"
                android:hint="@string/SecurityQuestion"
                android:textColorHint="#565051" />

            <EditText
                android:id="@+id/EnterSecurityAnswer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="0.97"
                android:background="@drawable/greengradient"
                android:hint="@string/SecurityAnswer"
                android:textColorHint="#565051" />

            <LinearLayout
                android:id="@+id/tosLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.97" >

                <CheckBox
                    android:id="@+id/AcceptTOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/Terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TOS"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <Button
                android:id="@+id/RegisterButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/orangegradient"
                android:hint="@string/RegisterButton"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>